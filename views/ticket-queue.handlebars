<body class="min-h-screen bg-gradient-to-br from-slate-50 via-indigo-50 to-emerald-50 font-['Space_Grotesk'] text-slate-900">
    <div class="relative min-h-screen px-4 py-8 sm:px-6 lg:px-10">
        <div class="pointer-events-none absolute inset-0">
            <div class="absolute -top-24 right-6 h-48 w-48 rounded-full bg-indigo-200/60 blur-3xl"></div>
            <div class="absolute bottom-10 left-10 h-56 w-56 rounded-full bg-emerald-200/60 blur-3xl"></div>
        </div>

        <div id="audio-interaction-notice" style="
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            background: #0f172a;
            color: #fff;
            padding: 12px 16px;
            font-size: 14px;
            text-align: center;
            box-shadow: 0 12px 24px rgba(15, 23, 42, 0.35);
            z-index: 2000;
            display: none;
        ">Tap anywhere to enable notification sound.</div>

        <div class="relative mx-auto w-full max-w-6xl">
            <div class="flex flex-col items-start justify-between gap-4 rounded-2xl bg-white/80 px-6 py-5 shadow-lg ring-1 ring-slate-200/60 sm:flex-row sm:items-center">
                <div>
                    <p class="text-xs font-semibold uppercase tracking-[0.3em] text-emerald-500">Live Queue</p>
                    <h1 class="mt-2 text-3xl font-semibold text-slate-900 sm:text-4xl">Now Serving</h1>
                </div>
                <div class="inline-flex items-center gap-2 rounded-full bg-slate-100 px-4 py-2 text-xs font-semibold text-slate-600">
                    <span id="statusIndicator" class="inline-block h-2 w-2 rounded-full bg-rose-500"></span>
                    <span id="statusText">Disconnected</span>
                </div>
            </div>

            <section id="agentsDisplay" class="mt-6 rounded-2xl bg-white/90 p-6 shadow-lg ring-1 ring-slate-200/60">
                <div class="rounded-xl border border-dashed border-slate-200 bg-slate-50 px-6 py-10 text-center">
                    <h2 class="text-xl font-semibold text-slate-800">No Counters Active</h2>
                    <p class="mt-2 text-sm text-slate-500">Please wait for counters to be added...</p>
                </div>
            </section>

            <section class="mt-6 rounded-2xl bg-white/90 p-6 shadow-lg ring-1 ring-slate-200/60">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-xs font-semibold uppercase tracking-wide text-slate-500">Tickets Remaining</p>
                        <h2 class="text-lg font-semibold text-slate-800">Queue Status</h2>
                    </div>
                    <div class="rounded-2xl bg-emerald-50 px-6 py-4 text-center">
                        <div class="text-4xl font-semibold text-emerald-600" id="queueRemaining">0</div>
                        <div class="text-xs uppercase tracking-wide text-emerald-700/70">In Queue</div>
                    </div>
                </div>
            </section>
        </div>
    </div>

    <script>
        let ws = null;
        let previousAgentsState = [];
        let audioPermissionGranted = false;
        let audioUnlocked = false;
        const AUDIO_PERMISSION_KEY = 'audio-permission-approved-by-user';

        const connectedClasses = ["bg-emerald-500", "animate-pulse"];
        const disconnectedClasses = ["bg-rose-500"];

        // Show permission dialog
        function showAudioPermissionDialog() {
            if (document.getElementById('audio-permission-dialog')) return;
            
            const overlay = document.createElement('div');
            overlay.id = 'audio-permission-dialog';
            overlay.style.cssText = `
                position: fixed;
                top: 0;
                left: 0;
                right: 0;
                bottom: 0;
                background: rgba(0, 0, 0, 0.5);
                display: flex;
                align-items: center;
                justify-content: center;
                z-index: 2000;
            `;
            
            const dialog = document.createElement('div');
            dialog.style.cssText = `
                background: white;
                border-radius: 12px;
                padding: 32px;
                max-width: 400px;
                box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
                text-align: center;
                font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
            `;
            
            dialog.innerHTML = `
                <div style="margin-bottom: 24px;">
                    <div style="font-size: 48px; margin-bottom: 16px;">ðŸ””</div>
                    <h2 style="margin: 0 0 12px 0; font-size: 20px; color: #1a1a1a;">Enable Notifications</h2>
                    <p style="margin: 0; color: #666; font-size: 14px;">
                        This page would like to play notification sounds when tickets arrive. 
                        You can change this anytime in your browser settings.
                    </p>
                </div>
                <div style="display: flex; gap: 12px;">
                    <button id="deny-audio" style="
                        flex: 1;
                        padding: 10px 16px;
                        border: 1px solid #ccc;
                        background: #f5f5f5;
                        border-radius: 6px;
                        cursor: pointer;
                        font-size: 14px;
                        font-weight: 600;
                        color: #333;
                        transition: all 0.2s;
                    " onmouseover="this.style.background='#e5e5e5'" onmouseout="this.style.background='#f5f5f5'">
                        Don't Allow
                    </button>
                    <button id="allow-audio" style="
                        flex: 1;
                        padding: 10px 16px;
                        border: none;
                        background: #667eea;
                        border-radius: 6px;
                        cursor: pointer;
                        font-size: 14px;
                        font-weight: 600;
                        color: white;
                        transition: all 0.2s;
                    " onmouseover="this.style.background='#5568d3'" onmouseout="this.style.background='#667eea'">
                        Allow
                    </button>
                </div>
            `;
            
            overlay.appendChild(dialog);
            document.body.appendChild(overlay);
            
            document.getElementById('allow-audio').addEventListener('click', () => {
                audioPermissionGranted = true;
                audioUnlocked = true;
                localStorage.setItem(AUDIO_PERMISSION_KEY, 'true');
                removeAudioDialog();
                console.log('Audio permission approved');
            });
            
            document.getElementById('deny-audio').addEventListener('click', () => {
                localStorage.setItem(AUDIO_PERMISSION_KEY, 'false');
                removeAudioDialog();
                console.log('Audio permission denied');
            });
        }

        function removeAudioDialog() {
            const dialog = document.getElementById('audio-permission-dialog');
            if (dialog) {
                dialog.style.transition = 'opacity 0.3s ease-out';
                dialog.style.opacity = '0';
                setTimeout(() => dialog.remove(), 300);
            }
        }

        function showAudioInteractionNotice() {
            const notice = document.getElementById('audio-interaction-notice');
            if (!notice) return;

            notice.style.display = 'block';
            notice.style.opacity = '1';
            notice.style.transition = 'opacity 0.3s ease-out';
            document.addEventListener('click', hideAudioInteractionNotice, { once: true });
            document.addEventListener('touchstart', hideAudioInteractionNotice, { once: true });
            document.addEventListener('keydown', hideAudioInteractionNotice, { once: true });
        }

        function hideAudioInteractionNotice() {
            const notice = document.getElementById('audio-interaction-notice');
            if (!notice) return;

            notice.style.opacity = '0';
            notice.style.transition = 'opacity 0.3s ease-out';
            setTimeout(() => {
                notice.style.display = 'none';
            }, 300);
        }

        // Play user's preferred notification sound
        function playDingSound() {
            if (audioPermissionGranted === false) {
                // User explicitly denied
                return;
            }

            if (audioPermissionGranted !== true) {
                // Permission not yet asked
                showAudioPermissionDialog();
                return;
            }

            // If audio not yet unlocked, try to unlock with muted play first
            if (!audioUnlocked) {
                try {
                    const notificationSound = '{{notificationSound}}' || 'happy-bell.wav';
                    const unlockerAudio = new Audio(`/sounds/${notificationSound}`);
                    unlockerAudio.muted = true;
                    unlockerAudio.volume = 0;
                    unlockerAudio.play().then(() => {
                        audioUnlocked = true;
                        // Now play the actual sound
                        playActualSound();
                    }).catch(() => {
                        console.log('Could not auto-unlock audio, needs user interaction');
                        showAudioInteractionNotice();
                    });
                } catch (error) {
                    console.warn('Error in auto-unlock:', error);
                }
                return;
            }

            // Audio is unlocked, play the sound
            playActualSound();
        }

        function playActualSound() {
            try {
                const notificationSound = '{{notificationSound}}' || 'happy-bell.wav';
                const audio = new Audio(`/sounds/${notificationSound}`);
                audio.volume = 0.5;
                audio.play().catch(error => {
                    console.warn('Could not play sound:', error.name);
                });
            } catch (error) {
                console.warn('Error playing sound:', error);
            }
        }

        // Check if a new ticket was assigned to any counter
        function checkForNewTicketAssignment(newAgents) {
            if (!Array.isArray(newAgents) || newAgents.length === 0) {
                return false;
            }

            let hasNewAssignment = false;

            newAgents.forEach((newAgent) => {
                const previousAgent = previousAgentsState.find(a => a.id === newAgent.id);
                
                // Check if this agent now has a ticket when they didn't before
                if (newAgent.currentTicket && newAgent.currentTicket.id) {
                    // If agent didn't exist before, or had no currentTicket before
                    if (!previousAgent || !previousAgent.currentTicket || !previousAgent.currentTicket.id) {
                        hasNewAssignment = true;
                    }
                    // Also check if the ticket ID changed (new ticket assigned)
                    else if (previousAgent.currentTicket.id !== newAgent.currentTicket.id) {
                        hasNewAssignment = true;
                    }
                }
            });

            return hasNewAssignment;
        }

        function connectWebSocket() {
            const protocol = window.location.protocol === 'https:' ? 'wss:' : 'ws:';
            ws = new WebSocket(`${protocol}//${window.location.host}/ws/ticket-queue`);

            ws.onopen = () => {
                console.log('WebSocket connected');
                updateStatus(true);
            };

            ws.onmessage = (event) => {
                try {
                    const data = JSON.parse(event.data);
                    updateDisplay(data);
                } catch (e) {
                    console.error('Error parsing message:', e);
                }
            };

            ws.onerror = (error) => {
                console.error('WebSocket error:', error);
                updateStatus(false);
            };

            ws.onclose = () => {
                console.log('WebSocket disconnected');
                updateStatus(false);
                setTimeout(connectWebSocket, 3000);
            };
        }

        function updateStatus(connected) {
            const indicator = document.getElementById('statusIndicator');
            const text = document.getElementById('statusText');

            indicator.classList.remove(...connectedClasses, ...disconnectedClasses);
            if (connected) {
                indicator.classList.add(...connectedClasses);
                text.textContent = 'Connected';
            } else {
                indicator.classList.add(...disconnectedClasses);
                text.textContent = 'Disconnected';
            }
        }

        function updateDisplay(data) {
            const agentsDisplayEl = document.getElementById('agentsDisplay');
            const queueRemainingEl = document.getElementById('queueRemaining');

            // Check for new ticket assignment before updating display
            if (checkForNewTicketAssignment(data.agents)) {
                playDingSound();
            }

            // Update previous state for next comparison
            previousAgentsState = JSON.parse(JSON.stringify(data.agents || []));

            queueRemainingEl.textContent = data.queueRemaining || 0;

            if (!data.agents || data.agents.length === 0) {
                agentsDisplayEl.innerHTML = `
                    <div class="rounded-xl border border-dashed border-slate-200 bg-slate-50 px-6 py-10 text-center">
                        <h2 class="text-xl font-semibold text-slate-800">No Counters Active</h2>
                        <p class="mt-2 text-sm text-slate-500">Please wait for counters to be added...</p>
                    </div>
                `;
            } else {
                agentsDisplayEl.innerHTML = `
                    <div class="overflow-x-auto">
                        <table class="min-w-full divide-y divide-slate-200 text-sm">
                            <thead class="bg-slate-900 text-white">
                                <tr>
                                    <th class="px-4 py-3 text-left text-xs font-semibold uppercase tracking-wide">Counter</th>
                                    <th class="px-4 py-3 text-left text-xs font-semibold uppercase tracking-wide">Assigned Topic</th>
                                    <th class="px-4 py-3 text-left text-xs font-semibold uppercase tracking-wide">Now Serving</th>
                                    <th class="px-4 py-3 text-left text-xs font-semibold uppercase tracking-wide">Customer Name</th>
                                    <th class="px-4 py-3 text-left text-xs font-semibold uppercase tracking-wide">Status</th>
                                </tr>
                            </thead>
                            <tbody class="divide-y divide-slate-100">
                                ${data.agents.map(agent => `
                                    <tr class="hover:bg-slate-50">
                                        <td class="px-4 py-4 text-base font-semibold text-slate-800">${agent.name}</td>
                                        <td class="px-4 py-4">
                                            ${agent.topicName ? `<span class="inline-flex items-center rounded-full bg-sky-100 px-2 py-1 text-xs font-semibold text-sky-700">${agent.topicName}</span>` : '<span class="text-slate-400 text-xs italic">Any topic</span>'}
                                        </td>
                                        <td class="px-4 py-4">
                                            ${agent.currentTicket ? `
                                                <span class="inline-flex items-center rounded-lg bg-emerald-600 px-3 py-1.5 text-lg font-semibold text-white shadow-sm">${agent.currentTicket.id}</span>
                                            ` : agent.isPaused ? `
                                                <span class="inline-flex items-center rounded-lg bg-amber-100 px-3 py-1.5 text-sm font-semibold text-amber-700">On break</span>
                                            ` : `
                                                <span class="inline-flex items-center rounded-lg bg-slate-100 px-3 py-1.5 text-sm font-semibold text-slate-500">Waiting</span>
                                            `}
                                        </td>
                                        <td class="px-4 py-4 text-base text-slate-700">
                                            ${agent.currentTicket ? agent.currentTicket.name : '<span class="text-slate-400 italic">-</span>'}
                                        </td>
                                        <td class="px-4 py-4">
                                            ${agent.isPaused ? `
                                                <span class="inline-flex items-center rounded-full bg-amber-100 px-3 py-1 text-xs font-semibold text-amber-700">Back soon</span>
                                            ` : `
                                                <span class="inline-flex items-center rounded-full bg-emerald-100 px-3 py-1 text-xs font-semibold text-emerald-700">Active</span>
                                            `}
                                        </td>
                                    </tr>
                                `).join('')}
                            </tbody>
                        </table>
                    </div>
                `;
            }
        }

        // Auto-unlock audio on first user interaction (required by browser policy)
        async function autoUnlockAudio() {
            if (audioPermissionGranted !== true || audioUnlocked) return;
            
            try {
                const notificationSound = '{{notificationSound}}' || 'happy-bell.wav';
                const unlockerAudio = new Audio(`/sounds/${notificationSound}`);
                unlockerAudio.muted = true;
                unlockerAudio.volume = 0;
                await unlockerAudio.play();
                audioUnlocked = true;
                console.log('Audio unlocked on user interaction');
                // Remove listeners after successful unlock
                document.removeEventListener('click', autoUnlockAudio);
                document.removeEventListener('touchstart', autoUnlockAudio);
                document.removeEventListener('keydown', autoUnlockAudio);
            } catch (error) {
                console.log('Audio unlock attempt:', error.name);
            }
        }

        window.addEventListener('load', async () => {
            connectWebSocket();
            
            // Check stored permission
            const storedPermission = localStorage.getItem(AUDIO_PERMISSION_KEY);
            
            if (storedPermission === 'true') {
                audioPermissionGranted = true;
                console.log('Audio permission restored from storage');
                
                // Add listeners for auto-unlock on first interaction
                document.addEventListener('click', autoUnlockAudio);
                document.addEventListener('touchstart', autoUnlockAudio);
                document.addEventListener('keydown', autoUnlockAudio);
                if (!audioUnlocked) {
                    showAudioInteractionNotice();
                }
            } else if (storedPermission === 'false') {
                audioPermissionGranted = false;
                console.log('Audio permission was previously denied');
            } else {
                // First time - show permission dialog
                showAudioPermissionDialog();
            }
        });

        window.addEventListener('beforeunload', () => {
            if (ws) ws.close();
        });
    </script>
</body>
