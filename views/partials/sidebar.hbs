<aside id="sidebar" class="fixed left-0 top-0 h-screen w-64 bg-white/90 backdrop-blur border-r border-slate-200 p-6 overflow-y-auto transition-transform duration-300 z-40 md:translate-x-0 -translate-x-full">
    <div class="mb-8">
        <h2 class="text-lg font-bold text-slate-900">{{sidebarTitle}}</h2>
        <p class="text-xs text-slate-500 mt-1">{{sidebarSubtitle}}</p>
    </div>
    <nav class="space-y-2">
        {{#if showDashboard}}
            <a href="/dashboard" class="block px-4 py-2.5 rounded-lg {{dashboardClass}}">
                {{#if dashboardLabel}}{{dashboardLabel}}{{else}}Dashboard{{/if}}
            </a>
        {{/if}}
        {{#if showQueue}}
            <a href="/admin" class="block px-4 py-2.5 rounded-lg {{queueClass}}">
                Queue Management
            </a>
        {{/if}}
        {{#if showStations}}
            <a href="/stations" class="block px-4 py-2.5 rounded-lg {{stationsClass}}">
                Manage Stations
            </a>
        {{/if}}
    </nav>
</aside>

<div id="sidebarOverlay" class="fixed inset-0 bg-slate-900/50 z-30 hidden md:hidden transition-opacity duration-300"></div>
