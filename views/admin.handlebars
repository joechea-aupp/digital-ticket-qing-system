<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Panel - Ticket Queue</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            padding: 20px;
        }
        
        .header {
            text-align: center;
            color: white;
            margin-bottom: 30px;
        }
        
        .header h1 {
            font-size: 2.5em;
            margin-bottom: 10px;
            text-shadow: 0 2px 4px rgba(0, 0, 0, 0.2);
        }
        
        .status {
            display: inline-block;
            padding: 8px 16px;
            background: rgba(255, 255, 255, 0.2);
            border-radius: 20px;
            margin-top: 10px;
        }
        
        .status-indicator {
            display: inline-block;
            width: 8px;
            height: 8px;
            border-radius: 50%;
            margin-right: 8px;
            animation: pulse 2s infinite;
        }
        
        .status-indicator.connected {
            background-color: #4CAF50;
        }
        
        .status-indicator.disconnected {
            background-color: #f44336;
            animation: none;
        }
        
        @keyframes pulse {
            0%, 100% {
                opacity: 1;
            }
            50% {
                opacity: 0.5;
            }
        }
        
        .container {
            max-width: 1200px;
            margin: 0 auto;
        }
        
        .grid {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 20px;
            margin-bottom: 20px;
        }
        
        @media (max-width: 768px) {
            .grid {
                grid-template-columns: 1fr;
            }
        }
        
        .card {
            background: white;
            border-radius: 12px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
            padding: 30px;
        }
        
        .card h2 {
            color: #333;
            margin-bottom: 20px;
            font-size: 1.5em;
        }
        
        .current-ticket {
            text-align: center;
            padding: 30px;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border-radius: 10px;
            color: white;
            margin-bottom: 20px;
        }
        
        .current-ticket-label {
            font-size: 1.1em;
            opacity: 0.9;
            margin-bottom: 10px;
        }
        
        .current-ticket-number {
            font-size: 4em;
            font-weight: bold;
            margin: 10px 0;
            text-shadow: 0 2px 4px rgba(0, 0, 0, 0.2);
        }
        
        .current-ticket-number.empty {
            font-size: 2em;
            opacity: 0.7;
        }
        
        .current-ticket-name {
            font-size: 1.3em;
            margin-top: 10px;
        }
        
        .stats {
            display: flex;
            justify-content: space-around;
            padding: 20px;
            background-color: #f5f5f5;
            border-radius: 8px;
        }
        
        .stat {
            text-align: center;
        }
        
        .stat-value {
            font-size: 2.5em;
            font-weight: bold;
            color: #667eea;
        }
        
        .stat-label {
            color: #666;
            margin-top: 5px;
        }
        
        button {
            width: 100%;
            padding: 15px;
            border: none;
            border-radius: 6px;
            font-size: 1.1em;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s;
            margin-top: 10px;
        }
        
        .btn-next {
            background-color: #4CAF50;
            color: white;
        }
        
        .btn-next:hover {
            background-color: #45a049;
        }
        
        .btn-clear {
            background-color: #ff9800;
            color: white;
        }
        
        .btn-clear:hover {
            background-color: #fb8c00;
        }
        
        button:disabled {
            opacity: 0.5;
            cursor: not-allowed;
        }
        
        .queue-list {
            max-height: 500px;
            overflow-y: auto;
        }
        
        .queue-item {
            padding: 15px;
            margin: 10px 0;
            background-color: #f9f9f9;
            border-left: 4px solid #667eea;
            border-radius: 4px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }
        
        .queue-item-info {
            flex: 1;
        }
        
        .ticket-id {
            font-weight: bold;
            color: #667eea;
            font-size: 1.2em;
            margin-bottom: 5px;
        }
        
        .ticket-name {
            color: #333;
            font-size: 1.1em;
            margin-bottom: 3px;
        }
        
        .ticket-time {
            color: #999;
            font-size: 0.9em;
        }
        
        .empty-queue {
            text-align: center;
            color: #999;
            padding: 40px;
            font-style: italic;
        }
        
        .alert {
            padding: 12px;
            margin: 15px 0;
            border-radius: 6px;
            display: none;
        }
        
        .alert.show {
            display: block;
        }
        
        .alert.error {
            background-color: #ffebee;
            color: #c62828;
            border: 1px solid #ef5350;
        }
        
        .alert.success {
            background-color: #e8f5e9;
            color: #2e7d32;
            border: 1px solid #4caf50;
        }
        
    </style>
</head>
<body>
    <div class="header">
        <h1>Admin Panel</h1>
        <div class="status">
            <span class="status-indicator disconnected" id="statusIndicator"></span>
            <span id="statusText">Connecting...</span>
        </div>
    </div>

    <div class="container">
        <div class="grid">
            <div class="card">
                <h2>Current Ticket</h2>
                
                <div class="current-ticket">
                    <div class="current-ticket-label">Now Serving</div>
                    <div class="current-ticket-number" id="currentTicketNumber">-</div>
                    <div class="current-ticket-name" id="currentTicketName"></div>
                </div>
                
                <div class="stats">
                    <div class="stat">
                        <div class="stat-value" id="queueRemaining">0</div>
                        <div class="stat-label">In Queue</div>
                    </div>
                </div>
                
                <div class="alert error" id="errorAlert"></div>
                
                <button class="btn-next" id="nextBtn" onclick="nextTicket()" disabled>
                    Next Ticket
                </button>
                <button class="btn-clear" onclick="clearCurrent()">
                    Clear Current
                </button>
            </div>
            
            <div class="card">
                <h2>Queue</h2>
                <div class="queue-list" id="queueList">
                    <div class="empty-queue">Waiting for connection...</div>
                </div>
            </div>
        </div>
    </div>

    <script>
        let ws = null;
        let queue = [];
        let currentTicket = null;
        
        function connectWebSocket() {
            const protocol = window.location.protocol === 'https:' ? 'wss:' : 'ws:';
            ws = new WebSocket(`${protocol}//${window.location.host}/ws/admin`);
            
            ws.onopen = () => {
                console.log('WebSocket connected');
                updateStatus(true);
                document.getElementById('nextBtn').disabled = false;
            };
            
            ws.onmessage = (event) => {
                try {
                    const data = JSON.parse(event.data);
                    if (data.queue !== undefined) {
                        queue = data.queue;
                        currentTicket = data.currentTicket;
                        updateDisplay();
                    } else if (data.error) {
                        showError(data.error);
                    }
                } catch (e) {
                    console.error('Error parsing message:', e);
                }
            };
            
            ws.onerror = (error) => {
                console.error('WebSocket error:', error);
                updateStatus(false);
            };
            
            ws.onclose = () => {
                console.log('WebSocket disconnected');
                updateStatus(false);
                document.getElementById('nextBtn').disabled = true;
                setTimeout(connectWebSocket, 3000);
            };
        }
        
        function updateStatus(connected) {
            const indicator = document.getElementById('statusIndicator');
            const text = document.getElementById('statusText');
            
            if (connected) {
                indicator.classList.remove('disconnected');
                indicator.classList.add('connected');
                text.textContent = 'Connected';
            } else {
                indicator.classList.remove('connected');
                indicator.classList.add('disconnected');
                text.textContent = 'Disconnected';
            }
        }
        
        function updateDisplay() {
            // Update current ticket
            const ticketNumberEl = document.getElementById('currentTicketNumber');
            const ticketNameEl = document.getElementById('currentTicketName');
            
            if (currentTicket) {
                ticketNumberEl.textContent = currentTicket.id;
                ticketNumberEl.classList.remove('empty');
                ticketNameEl.textContent = currentTicket.name;
            } else {
                ticketNumberEl.textContent = 'No Ticket';
                ticketNumberEl.classList.add('empty');
                ticketNameEl.textContent = '';
            }
            
            // Update queue remaining
            document.getElementById('queueRemaining').textContent = queue.length;
            
            // Update queue list
            const queueListEl = document.getElementById('queueList');
            if (queue.length === 0) {
                queueListEl.innerHTML = '<div class="empty-queue">No tickets in queue</div>';
            } else {
                queueListEl.innerHTML = queue.map((ticket, index) => `
                    <div class="queue-item">
                        <div class="queue-item-info">
                            <div class="ticket-id">Ticket #${ticket.id}</div>
                            <div class="ticket-name">${ticket.name}</div>
                            <div class="ticket-time">${new Date(ticket.time).toLocaleString()}</div>
                        </div>
                    </div>
                `).join('');
            }
        }
        
        function nextTicket() {
            if (!ws || ws.readyState !== WebSocket.OPEN) {
                showError('Not connected to server');
                return;
            }
            
            if (queue.length === 0) {
                showError('No tickets in queue');
                return;
            }
            
            ws.send(JSON.stringify({ action: 'nextTicket' }));
        }
        
        function clearCurrent() {
            if (!ws || ws.readyState !== WebSocket.OPEN) {
                showError('Not connected to server');
                return;
            }
            
            ws.send(JSON.stringify({ action: 'clearCurrent' }));
        }
        
        function showError(message) {
            const alert = document.getElementById('errorAlert');
            alert.textContent = message;
            alert.classList.add('show');
            setTimeout(() => alert.classList.remove('show'), 3000);
        }
        
        // Connect when page loads
        window.addEventListener('load', connectWebSocket);
        
        // Cleanup on page unload
        window.addEventListener('beforeunload', () => {
            if (ws) ws.close();
        });
    </script>
</body>
</html>
