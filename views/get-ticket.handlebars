<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Get Your Ticket</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 20px;
        }
        
        .container {
            background: white;
            border-radius: 12px;
            box-shadow: 0 10px 40px rgba(0, 0, 0, 0.3);
            max-width: 500px;
            width: 100%;
            padding: 40px;
        }
        
        h1 {
            color: #333;
            margin-bottom: 30px;
            text-align: center;
        }
        
        .form-group {
            margin-bottom: 25px;
        }
        
        label {
            display: block;
            color: #555;
            font-weight: 600;
            margin-bottom: 8px;
        }
        
        input[type="text"] {
            width: 100%;
            padding: 12px 15px;
            border: 2px solid #ddd;
            border-radius: 6px;
            font-size: 1em;
            transition: border-color 0.3s;
        }
        
        input[type="text"]:focus {
            outline: none;
            border-color: #667eea;
        }
        
        button {
            width: 100%;
            padding: 15px;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            border: none;
            border-radius: 6px;
            font-size: 1.1em;
            font-weight: 600;
            cursor: pointer;
            transition: transform 0.2s;
        }
        
        button:hover {
            transform: translateY(-2px);
        }
        
        button:active {
            transform: translateY(0);
        }
        
        button:disabled {
            opacity: 0.6;
            cursor: not-allowed;
            transform: none;
        }
        
        .status {
            text-align: center;
            margin-bottom: 20px;
            padding: 10px;
            background-color: #f0f0f0;
            border-radius: 6px;
            font-size: 0.9em;
        }
        
        .status-indicator {
            display: inline-block;
            width: 8px;
            height: 8px;
            border-radius: 50%;
            margin-right: 6px;
            animation: pulse 2s infinite;
        }
        
        .status-indicator.connected {
            background-color: #4CAF50;
        }
        
        .status-indicator.disconnected {
            background-color: #f44336;
            animation: none;
        }
        
        @keyframes pulse {
            0%, 100% {
                opacity: 1;
            }
            50% {
                opacity: 0.5;
            }
        }
        
        .result {
            display: none;
            text-align: center;
            padding: 30px;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border-radius: 8px;
            color: white;
            margin-top: 20px;
        }
        
        .result.show {
            display: block;
        }
        
        .result h2 {
            margin-bottom: 20px;
            font-size: 1.5em;
        }
        
        .ticket-number {
            font-size: 5em;
            font-weight: bold;
            margin: 20px 0;
            text-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        }

        .ticket-number.expired {
            color: #b3b3b3;
            text-decoration: line-through;
        }
        
        .position-info {
            font-size: 1.1em;
            opacity: 0.9;
            margin-top: 15px;
        }
        
        .new-ticket-btn {
            margin-top: 20px;
            background: white;
            color: #667eea;
        }
        
        .alert {
            padding: 12px;
            margin-bottom: 20px;
            border-radius: 6px;
            display: none;
        }
        
        .alert.show {
            display: block;
        }
        
        .alert.error {
            background-color: #ffebee;
            color: #c62828;
            border: 1px solid #ef5350;
        }
        
        .alert.warning {
            background-color: #fff3e0;
            color: #e65100;
            border: 1px solid #ff9800;
        }
        
        .tickets-remaining {
            background: #f8f9fa;
            border-left: 4px solid #667eea;
            padding: 15px;
            margin-bottom: 20px;
            border-radius: 6px;
            display: none;
        }
        
        .tickets-remaining.show {
            display: block;
        }
        
        .tickets-remaining h3 {
            color: #555;
            font-size: 0.9em;
            margin-bottom: 8px;
            text-transform: uppercase;
            letter-spacing: 1px;
        }
        
        .tickets-remaining-number {
            font-size: 2.5em;
            font-weight: bold;
            color: #667eea;
        }
        
        .tickets-remaining-text {
            font-size: 0.9em;
            color: #666;
            margin-top: 5px;
        }
        
        .tickets-remaining-number.expired {
            color: #999;
            text-decoration: line-through;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Get Your Ticket</h1>
        
        <div class="status">
            <span class="status-indicator disconnected" id="statusIndicator"></span>
            <span id="statusText">Connecting...</span>
        </div>
        
        <div class="tickets-remaining" id="ticketsRemainingContainer">
            <h3>Tickets Until Your Turn</h3>
            <div class="tickets-remaining-number" id="ticketsRemainingDisplay">0</div>
            <div class="tickets-remaining-text" id="ticketsRemainingText"></div>
        </div>
        
        <div class="alert error" id="errorAlert"></div>
        <div class="alert warning" id="expiredAlert"></div>
        
        <div id="formContainer">
            <div class="form-group">
                <label for="userName">Your Name</label>
                <input 
                    type="text" 
                    id="userName" 
                    placeholder="Enter your name" 
                    required
                    autocomplete="name"
                >
            </div>
            
            <button id="getTicketBtn" onclick="getTicket()" disabled>
                Get Ticket
            </button>
        </div>
        
        <div class="result" id="resultContainer">
            <h2>Your Ticket</h2>
            <div class="ticket-number" id="ticketNumber">-</div>
            <div class="position-info">
                <p id="positionText"></p>
            </div>
            <button class="new-ticket-btn" onclick="resetForm()">Get Another Ticket</button>
        </div>
    </div>

    <script>
        let ws = null;
        const STORAGE_KEY = 'ticketData';
        let currentServerSessionId = null;
        let myTicket = null;
        let currentServingTicketId = null;
        let agents = [];
        
        function connectWebSocket() {
            const protocol = window.location.protocol === 'https:' ? 'wss:' : 'ws:';
            ws = new WebSocket(`${protocol}//${window.location.host}/ws/get-ticket`);
            
            ws.onopen = () => {
                console.log('WebSocket connected');
                updateStatus(true);
                document.getElementById('getTicketBtn').disabled = false;
            };
            
            ws.onmessage = (event) => {
                try {
                    const data = JSON.parse(event.data);
                    
                    // Store server session ID when received
                    if (data.serverSessionId) {
                        currentServerSessionId = data.serverSessionId;
                    }
                    
                    // Handle current serving updates
                    if (data.type === 'currentServing') {
                        if (data.currentTicket && data.currentTicket.id) {
                            currentServingTicketId = data.currentTicket.id;
                        } else {
                            currentServingTicketId = null;
                        }
                        // Store agents info for availability check
                        if (data.agents) {
                            agents = data.agents;
                        }
                        updateTicketsRemaining();
                        // Validate stored ticket against server session ID
                        if (currentServerSessionId) {
                            validateStoredTicket(currentServerSessionId);
                        }
                    }
                    // Handle ticket assignment
                    else if (data.success && data.ticket) {
                        showTicket(data.ticket, data.position);
                        saveTicketToStorage(data.ticket, data.position, data.serverSessionId);
                    } else if (data.error) {
                        showError(data.error);
                    }
                } catch (e) {
                    console.error('Error parsing message:', e);
                    showError('Error receiving response');
                }
            };
            
            ws.onerror = (error) => {
                console.error('WebSocket error:', error);
                updateStatus(false);
            };
            
            ws.onclose = () => {
                console.log('WebSocket disconnected');
                updateStatus(false);
                document.getElementById('getTicketBtn').disabled = true;
                setTimeout(connectWebSocket, 3000);
            };
        }
        
        function updateStatus(connected) {
            const indicator = document.getElementById('statusIndicator');
            const text = document.getElementById('statusText');
            
            if (connected) {
                indicator.classList.remove('disconnected');
                indicator.classList.add('connected');
                text.textContent = 'Connected';
            } else {
                indicator.classList.remove('connected');
                indicator.classList.add('disconnected');
                text.textContent = 'Disconnected';
            }
        }
        
        function updateTicketsRemaining() {
            const container = document.getElementById('ticketsRemainingContainer');
            const display = document.getElementById('ticketsRemainingDisplay');
            const text = document.getElementById('ticketsRemainingText');
            
            if (!myTicket || !myTicket.id) {
                container.classList.remove('show');
                return;
            }
            
            // Check if any agents are available
            const hasAvailableAgents = agents && agents.length > 0;
            
            if (!hasAvailableAgents) {
                // No agents available
                display.textContent = '';
                text.textContent = 'No agent available. Thank you for patiently waiting.';
                container.classList.add('show');
                return;
            }
            
            if (currentServingTicketId === null || currentServingTicketId === undefined) {
                // No one is being served yet, but agents are available
                display.textContent = '';
                text.textContent = 'Waiting for agent to call next ticket.';
                container.classList.add('show');
                return;
            }
            
            const ticketsRemaining = myTicket.id - currentServingTicketId;
            
            if (ticketsRemaining < 0) {
                // Your ticket has passed - expired
                display.textContent = 'PASSED';
                display.className = 'tickets-remaining-number';
                text.textContent = 'Your ticket has passed. Please contact the counter.';
                document.getElementById('ticketNumber').classList.add('expired');
                container.classList.add('show');
            } else if (ticketsRemaining === 0) {
                // Your turn or already passed
                display.textContent = 'Your turn!';
                display.className = 'tickets-remaining-number';
                text.textContent = "It's your turn!";
                document.getElementById('ticketNumber').classList.remove('expired');
                container.classList.add('show');
            } else {
                display.textContent = ticketsRemaining;
                display.className = 'tickets-remaining-number';
                text.textContent = ticketsRemaining === 1 ? 'ticket ahead of you' : 'tickets ahead of you';
                document.getElementById('ticketNumber').classList.remove('expired');
                container.classList.add('show');
            }
        }
        
        function saveTicketToStorage(ticket, position, serverSessionId) {
            const ticketData = {
                ticket: ticket,
                position: position,
                serverSessionId: serverSessionId,
                timestamp: new Date().getTime()
            };
            localStorage.setItem(STORAGE_KEY, JSON.stringify(ticketData));
        }
        
        function loadTicketFromStorage() {
            try {
                const stored = localStorage.getItem(STORAGE_KEY);
                if (stored) {
                    const ticketData = JSON.parse(stored);
                    // Show stored ticket (will be validated when server session ID arrives)
                    showTicket(ticketData.ticket, ticketData.position);
                }
            } catch (e) {
                console.error('Error loading ticket from storage:', e);
            }
        }
        
        function validateStoredTicket(serverSessionId) {
            try {
                const stored = localStorage.getItem(STORAGE_KEY);
                if (!stored) return;
                
                const ticketData = JSON.parse(stored);
                
                // Check if server session ID matches
                if (ticketData.serverSessionId && ticketData.serverSessionId !== serverSessionId) {
                    // Ticket is from a previous server session - expired
                    console.log('Ticket expired: server session changed');
                    showExpiredTicketMessage();
                    clearTicketFromStorage();
                }
            } catch (e) {
                console.error('Error validating stored ticket:', e);
            }
        }
        
        function clearTicketFromStorage() {
            localStorage.removeItem(STORAGE_KEY);
        }
        
        function getTicket() {
            const nameInput = document.getElementById('userName');
            const name = nameInput.value.trim();
            
            if (!name) {
                showError('Please enter your name');
                nameInput.focus();
                return;
            }
            
            if (!ws || ws.readyState !== WebSocket.OPEN) {
                showError('Not connected to server');
                return;
            }
            
            ws.send(JSON.stringify({
                action: 'getTicket',
                name: name
            }));
        }
        
        function showTicket(ticket, position) {
            myTicket = ticket;
            const ticketNumberEl = document.getElementById('ticketNumber');
            ticketNumberEl.textContent = ticket.id;
            ticketNumberEl.classList.remove('expired');
            
            document.getElementById('formContainer').style.display = 'none';
            document.getElementById('resultContainer').classList.add('show');
            updateTicketsRemaining();
        }
        
        function resetForm() {
            myTicket = null;
            document.getElementById('userName').value = '';
            document.getElementById('formContainer').style.display = 'block';
            document.getElementById('resultContainer').classList.remove('show');
            document.getElementById('ticketNumber').classList.remove('expired');
            document.getElementById('errorAlert').classList.remove('show');
            document.getElementById('ticketsRemainingContainer').classList.remove('show');
            clearTicketFromStorage();
        }
        
        function showError(message) {
            const alert = document.getElementById('errorAlert');
            alert.textContent = message;
            alert.classList.add('show');
            setTimeout(() => alert.classList.remove('show'), 3000);
        }
        
        function showExpiredTicketMessage() {
            const alert = document.getElementById('expiredAlert');
            alert.innerHTML = '<strong>Ticket Expired:</strong> The server has been restarted. Please get a new ticket.';
            alert.classList.add('show');
            
            // Reset form to allow getting a new ticket
            myTicket = null;
            document.getElementById('userName').value = '';
            document.getElementById('formContainer').style.display = 'block';
            document.getElementById('resultContainer').classList.remove('show');
            document.getElementById('ticketsRemainingContainer').classList.remove('show');
            
            // Keep the message visible for 10 seconds
            setTimeout(() => alert.classList.remove('show'), 10000);
        }
        
        // Allow Enter key to submit
        document.getElementById('userName').addEventListener('keypress', (e) => {
            if (e.key === 'Enter') {
                getTicket();
            }
        });
        
        // Connect when page loads
        window.addEventListener('load', () => {
            loadTicketFromStorage();
            connectWebSocket();
        });
        
        // Cleanup on page unload
        window.addEventListener('beforeunload', () => {
            if (ws) ws.close();
        });
    </script>
</body>
</html>
