<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Get Your Ticket</title>
    <link rel="stylesheet" href="/styles/main.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@400;500;600;700&display=swap" rel="stylesheet">
</head>
<body class="min-h-screen bg-gradient-to-br from-indigo-50 via-sky-50 to-emerald-50 font-['Space_Grotesk'] text-slate-900">
    <div class="relative flex min-h-screen items-center justify-center px-4 py-10">
        <div class="pointer-events-none absolute inset-0">
            <div class="absolute -top-16 right-6 h-44 w-44 rounded-full bg-indigo-200/60 blur-3xl"></div>
            <div class="absolute -bottom-20 left-6 h-52 w-52 rounded-full bg-emerald-200/70 blur-3xl"></div>
        </div>

        <main class="relative w-full max-w-lg rounded-2xl bg-white/90 p-8 shadow-2xl ring-1 ring-slate-200/60 sm:p-10">
            <header class="text-center">
                <p class="text-xs font-semibold uppercase tracking-[0.3em] text-emerald-500">Welcome</p>
                <h1 class="mt-2 text-3xl font-semibold text-slate-900">Get Your Ticket</h1>
                <p class="mt-2 text-sm text-slate-500">Join the live queue and track your turn.</p>
            </header>

            <div class="mt-6 flex items-center justify-center">
                <div class="inline-flex items-center gap-2 rounded-full bg-slate-100 px-4 py-2 text-xs font-semibold text-slate-600">
                    <span id="statusIndicator" class="inline-block h-2 w-2 rounded-full bg-rose-500"></span>
                    <span id="statusText">Connecting...</span>
                </div>
            </div>

            <div id="ticketsRemainingContainer" class="mt-6 hidden rounded-xl border border-slate-100 bg-slate-50 px-4 py-4">
                <p class="text-xs font-semibold uppercase tracking-wide text-slate-500">Tickets Until Your Turn</p>
                <div id="ticketsRemainingDisplay" class="mt-2 text-3xl font-semibold text-emerald-600">0</div>
                <p id="ticketsRemainingText" class="mt-1 text-sm text-slate-500"></p>
            </div>

            <div id="errorAlert" class="mt-6 hidden rounded-lg border border-rose-200 bg-rose-50 px-4 py-3 text-sm text-rose-700" role="alert"></div>
            <div id="expiredAlert" class="mt-4 hidden rounded-lg border border-amber-200 bg-amber-50 px-4 py-3 text-sm text-amber-700" role="alert"></div>

            <section id="formContainer" class="mt-6 space-y-5">
                <div>
                    <label for="userName" class="text-sm font-semibold text-slate-600">Your Name</label>
                    <input
                        type="text"
                        id="userName"
                        placeholder="Enter your name"
                        required
                        autocomplete="name"
                        class="mt-2 w-full rounded-lg border border-slate-200 px-4 py-3 text-sm text-slate-800 placeholder:text-slate-400 focus:border-emerald-500 focus:outline-none focus:ring-2 focus:ring-emerald-200"
                    >
                </div>

                <button id="getTicketBtn" onclick="getTicket()" disabled class="w-full rounded-lg bg-emerald-600 px-4 py-3 text-sm font-semibold text-white shadow-sm transition hover:bg-emerald-700 disabled:bg-slate-200 disabled:text-slate-500 disabled:shadow-none">
                    Get Ticket
                </button>
            </section>

            <section id="resultContainer" class="mt-6 hidden rounded-2xl bg-gradient-to-br from-emerald-500 via-teal-500 to-sky-500 px-6 py-8 text-center text-white shadow-lg">
                <h2 class="text-lg font-semibold">Your Ticket</h2>
                <div id="ticketNumber" class="mt-4 text-6xl font-bold drop-shadow">-</div>
                <div class="mt-3 text-sm text-white/90">
                    <p id="positionText"></p>
                </div>
                <button class="mt-6 w-full rounded-lg bg-white/90 px-4 py-2.5 text-sm font-semibold text-emerald-700 shadow-sm transition hover:bg-white" onclick="resetForm()">Get Another Ticket</button>
            </section>
        </main>
    </div>

    <script>
        let ws = null;
        const STORAGE_KEY = 'ticketData';
        let currentServerSessionId = null;
        let myTicket = null;
        let currentServingTicketId = null;
        let agents = [];

        const connectedClasses = ["bg-emerald-500", "animate-pulse"];
        const disconnectedClasses = ["bg-rose-500"];

        function connectWebSocket() {
            const protocol = window.location.protocol === 'https:' ? 'wss:' : 'ws:';
            ws = new WebSocket(`${protocol}//${window.location.host}/ws/get-ticket`);

            ws.onopen = () => {
                console.log('WebSocket connected');
                updateStatus(true);
                document.getElementById('getTicketBtn').disabled = false;
            };

            ws.onmessage = (event) => {
                try {
                    const data = JSON.parse(event.data);

                    if (data.serverSessionId) {
                        currentServerSessionId = data.serverSessionId;
                    }

                    if (data.type === 'currentServing') {
                        if (data.currentTicket && data.currentTicket.id) {
                            currentServingTicketId = data.currentTicket.id;
                        } else {
                            currentServingTicketId = null;
                        }
                        if (data.agents) {
                            agents = data.agents;
                        }
                        updateTicketsRemaining();
                        if (currentServerSessionId) {
                            validateStoredTicket(currentServerSessionId);
                        }
                    } else if (data.success && data.ticket) {
                        showTicket(data.ticket, data.position);
                        saveTicketToStorage(data.ticket, data.position, data.serverSessionId);
                    } else if (data.error) {
                        showError(data.error);
                    }
                } catch (e) {
                    console.error('Error parsing message:', e);
                    showError('Error receiving response');
                }
            };

            ws.onerror = (error) => {
                console.error('WebSocket error:', error);
                updateStatus(false);
            };

            ws.onclose = () => {
                console.log('WebSocket disconnected');
                updateStatus(false);
                document.getElementById('getTicketBtn').disabled = true;
                setTimeout(connectWebSocket, 3000);
            };
        }

        function updateStatus(connected) {
            const indicator = document.getElementById('statusIndicator');
            const text = document.getElementById('statusText');

            indicator.classList.remove(...connectedClasses, ...disconnectedClasses);
            if (connected) {
                indicator.classList.add(...connectedClasses);
                text.textContent = 'Connected';
            } else {
                indicator.classList.add(...disconnectedClasses);
                text.textContent = 'Disconnected';
            }
        }

        function setTicketsRemainingDisplay({ value, className, text }) {
            const display = document.getElementById('ticketsRemainingDisplay');
            const description = document.getElementById('ticketsRemainingText');

            display.textContent = value;
            display.className = className;
            description.textContent = text;
        }

        function updateTicketsRemaining() {
            const container = document.getElementById('ticketsRemainingContainer');

            if (!myTicket || !myTicket.id) {
                container.classList.add('hidden');
                return;
            }

            const hasAvailableAgents = agents && agents.length > 0;

            if (!hasAvailableAgents) {
                setTicketsRemainingDisplay({
                    value: '',
                    className: 'mt-2 text-2xl font-semibold text-slate-500',
                    text: 'No agent available. Thank you for patiently waiting.'
                });
                container.classList.remove('hidden');
                return;
            }

            if (currentServingTicketId === null || currentServingTicketId === undefined) {
                setTicketsRemainingDisplay({
                    value: '',
                    className: 'mt-2 text-2xl font-semibold text-slate-500',
                    text: 'Waiting for agent to call next ticket.'
                });
                container.classList.remove('hidden');
                return;
            }

            const ticketsRemaining = myTicket.id - currentServingTicketId;

            if (ticketsRemaining < 0) {
                setTicketsRemainingDisplay({
                    value: 'PASSED',
                    className: 'mt-2 text-2xl font-semibold text-slate-400 line-through',
                    text: 'Your ticket has passed. Please contact the counter.'
                });
                document.getElementById('ticketNumber').classList.add('line-through');
                container.classList.remove('hidden');
            } else if (ticketsRemaining === 0) {
                let servingAgent = null;
                if (agents && agents.length > 0) {
                    servingAgent = agents.find(agent =>
                        agent.currentTicket && agent.currentTicket.id === myTicket.id
                    );
                }

                setTicketsRemainingDisplay({
                    value: 'Your turn!',
                    className: 'mt-2 text-2xl font-semibold text-emerald-600',
                    text: servingAgent ? `Please go to counter ${servingAgent.name}` : "It's your turn! Please proceed to the counter."
                });
                document.getElementById('ticketNumber').classList.remove('line-through');
                container.classList.remove('hidden');
            } else {
                setTicketsRemainingDisplay({
                    value: ticketsRemaining,
                    className: 'mt-2 text-3xl font-semibold text-emerald-600',
                    text: ticketsRemaining === 1 ? 'ticket ahead of you' : 'tickets ahead of you'
                });
                document.getElementById('ticketNumber').classList.remove('line-through');
                container.classList.remove('hidden');
            }
        }

        function saveTicketToStorage(ticket, position, serverSessionId) {
            const ticketData = {
                ticket: ticket,
                position: position,
                serverSessionId: serverSessionId,
                timestamp: new Date().getTime()
            };
            localStorage.setItem(STORAGE_KEY, JSON.stringify(ticketData));
        }

        function loadTicketFromStorage() {
            try {
                const stored = localStorage.getItem(STORAGE_KEY);
                if (stored) {
                    const ticketData = JSON.parse(stored);
                    showTicket(ticketData.ticket, ticketData.position);
                }
            } catch (e) {
                console.error('Error loading ticket from storage:', e);
            }
        }

        function validateStoredTicket(serverSessionId) {
            try {
                const stored = localStorage.getItem(STORAGE_KEY);
                if (!stored) return;

                const ticketData = JSON.parse(stored);

                if (ticketData.serverSessionId && ticketData.serverSessionId !== serverSessionId) {
                    console.log('Ticket expired: server session changed');
                    showExpiredTicketMessage();
                    clearTicketFromStorage();
                }
            } catch (e) {
                console.error('Error validating stored ticket:', e);
            }
        }

        function clearTicketFromStorage() {
            localStorage.removeItem(STORAGE_KEY);
        }

        function getTicket() {
            const nameInput = document.getElementById('userName');
            const name = nameInput.value.trim();

            if (!name) {
                showError('Please enter your name');
                nameInput.focus();
                return;
            }

            if (!ws || ws.readyState !== WebSocket.OPEN) {
                showError('Not connected to server');
                return;
            }

            ws.send(JSON.stringify({
                action: 'getTicket',
                name: name
            }));
        }

        function showTicket(ticket, position) {
            myTicket = ticket;
            const ticketNumberEl = document.getElementById('ticketNumber');
            ticketNumberEl.textContent = ticket.id;
            ticketNumberEl.classList.remove('line-through');

            document.getElementById('formContainer').classList.add('hidden');
            document.getElementById('resultContainer').classList.remove('hidden');
            updateTicketsRemaining();
        }

        function resetForm() {
            myTicket = null;
            document.getElementById('userName').value = '';
            document.getElementById('formContainer').classList.remove('hidden');
            document.getElementById('resultContainer').classList.add('hidden');
            document.getElementById('ticketNumber').classList.remove('line-through');
            document.getElementById('errorAlert').classList.add('hidden');
            document.getElementById('ticketsRemainingContainer').classList.add('hidden');
            clearTicketFromStorage();
        }

        function showError(message) {
            const alert = document.getElementById('errorAlert');
            alert.textContent = message;
            alert.classList.remove('hidden');
            setTimeout(() => alert.classList.add('hidden'), 3000);
        }

        function showExpiredTicketMessage() {
            const alert = document.getElementById('expiredAlert');
            alert.innerHTML = '<strong>Ticket Expired:</strong> The server has been restarted. Please get a new ticket.';
            alert.classList.remove('hidden');

            myTicket = null;
            document.getElementById('userName').value = '';
            document.getElementById('formContainer').classList.remove('hidden');
            document.getElementById('resultContainer').classList.add('hidden');
            document.getElementById('ticketsRemainingContainer').classList.add('hidden');

            setTimeout(() => alert.classList.add('hidden'), 10000);
        }

        document.getElementById('userName').addEventListener('keypress', (e) => {
            if (e.key === 'Enter') {
                getTicket();
            }
        });

        window.addEventListener('load', () => {
            loadTicketFromStorage();
            connectWebSocket();
        });

        window.addEventListener('beforeunload', () => {
            if (ws) ws.close();
        });
    </script>
</body>
</html>
