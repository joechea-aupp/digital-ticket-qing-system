<body class="min-h-screen bg-gradient-to-br from-slate-50 via-sky-50 to-emerald-50 font-['Space_Grotesk'] text-slate-900">
    <div class="relative min-h-screen flex">
        {{> sidebar
            sidebarTitle="Dashboard"
            sidebarSubtitle="Account settings"
            showQueue=true
            showDashboard=true
            showTopic=true
            showStations=true
            showReport=true
            isAdmin=isAdmin
            queueClass="text-slate-600 hover:bg-slate-100 font-medium text-sm transition"
            dashboardClass="bg-emerald-100 text-emerald-700 font-medium text-sm transition"
            topicClass="text-slate-600 hover:bg-slate-100 font-medium text-sm transition"
            stationsClass="text-slate-600 hover:bg-slate-100 font-medium text-sm transition"
            reportClass="text-slate-600 hover:bg-slate-100 font-medium text-sm transition"
        }}

        <!-- Main Content -->
        <div class="w-full md:ml-64 transition-all duration-300">
            {{> header-bar headerTitle="Dashboard" showProfile=true }}

            <main class="relative mx-auto w-full max-w-4xl px-4 py-10 sm:px-6 lg:px-8">
                <div>
                    <h1 class="text-3xl font-semibold tracking-tight">Welcome back</h1>
                    <p class="text-sm text-slate-500">Signed in as {{user.username}}</p>
                </div>

                <section class="mt-8 rounded-2xl bg-white/90 p-6 shadow-lg ring-1 ring-slate-200/60">
                    <div class="flex items-center justify-between">
                        <div>
                            <h2 class="text-lg font-semibold text-slate-900">Account Actions</h2>
                            <p class="text-sm text-slate-500">Manage your access and security.</p>
                        </div>
                        <span class="rounded-full bg-slate-100 px-3 py-1 text-xs font-semibold text-slate-600">{{user.role}}</span>
                    </div>
                    <div class="mt-6 grid grid-cols-1 gap-4 sm:grid-cols-2">
                        {{#if isAdmin}}
                            <a href="/users" class="inline-flex items-center justify-center rounded-lg bg-emerald-600 px-4 py-3 text-sm font-semibold text-white shadow-sm transition hover:bg-emerald-700">Manage Users</a>
                        {{/if}}
                        <button class="inline-flex items-center justify-center rounded-lg bg-slate-900 px-4 py-3 text-sm font-semibold text-white shadow-sm transition hover:bg-slate-800" onclick="showChangePasswordModal()">Change Password</button>
                    </div>
                </section>

                <!-- Notification Sound Settings -->
                <section class="mt-8 rounded-2xl bg-white/90 p-6 shadow-lg ring-1 ring-slate-200/60">
                    <div>
                        <h2 class="text-lg font-semibold text-slate-900">Notification Preferences</h2>
                        <p class="text-sm text-slate-500">Choose your notification sound</p>
                    </div>
                    <div class="mt-6 space-y-4">
                        <div>
                            <label for="notificationSoundPref" class="block text-sm font-semibold text-slate-700 mb-3">
                                Notification Sound
                            </label>
                            <div class="flex flex-col gap-3 sm:flex-row">
                                <select 
                                    id="notificationSoundPref" 
                                    data-current-sound="{{user.notification_sound}}"
                                    class="flex-1 px-4 py-2.5 rounded-lg border border-slate-300 bg-slate-50 text-slate-900 transition focus:border-emerald-500 focus:bg-white focus:outline-none focus:ring-2 focus:ring-emerald-500/20"
                                >
                                    <option value="happy-bell.wav">Happy Bell (Default)</option>
                                    <option value="clear-announcement.wav">Clear Announcement</option>
                                    <option value="software-interface.wav">Software Interface</option>
                                    <option value="pa_sound.mp3">PA Announcement</option>
                                </select>
                                <button 
                                    type="button"
                                    onclick="previewNotificationSound()"
                                    class="px-4 py-2.5 rounded-lg border border-slate-300 bg-slate-50 text-slate-700 font-medium transition hover:bg-slate-100 focus:outline-none focus:ring-2 focus:ring-slate-500/20"
                                >
                                    ðŸ”Š Preview
                                </button>
                                <button 
                                    type="button"
                                    onclick="saveNotificationSound()"
                                    class="px-4 py-2.5 rounded-lg bg-emerald-600 text-white font-medium transition hover:bg-emerald-700 focus:outline-none focus:ring-2 focus:ring-emerald-500/20"
                                >
                                    Save
                                </button>
                            </div>
                            <div id="soundMessage" class="mt-3"></div>
                        </div>
                    </div>
                </section>
            </main>
        </div>
    </div>
</body>

<!-- Change Password Modal -->
<div id="changePasswordModal" class="hidden fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50">
    <div class="bg-white rounded-lg p-8 max-w-md w-full">
        <h2 class="text-2xl font-bold mb-4">Change Password</h2>
        <div id="passwordError" class="hidden bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4"></div>
        <form id="changePasswordForm">
            <div class="mb-4">
                <label class="block text-gray-700 text-sm font-bold mb-2">Current Password</label>
                <input type="password" id="currentPassword" required class="w-full px-3 py-2 border border-gray-300 rounded focus:outline-none focus:border-indigo-500">
            </div>
            <div class="mb-4">
                <label class="block text-gray-700 text-sm font-bold mb-2">New Password</label>
                <input type="password" id="newPassword" required class="w-full px-3 py-2 border border-gray-300 rounded focus:outline-none focus:border-indigo-500">
            </div>
            <div class="mb-6">
                <label class="block text-gray-700 text-sm font-bold mb-2">Confirm Password</label>
                <input type="password" id="confirmPassword" required class="w-full px-3 py-2 border border-gray-300 rounded focus:outline-none focus:border-indigo-500">
            </div>
            <div class="flex gap-2">
                <button type="submit" class="flex-1 bg-indigo-500 hover:bg-indigo-600 text-white px-4 py-2 rounded">Change Password</button>
                <button type="button" class="flex-1 bg-gray-400 hover:bg-gray-500 text-white px-4 py-2 rounded" onclick="closeChangePasswordModal()">Cancel</button>
            </div>
        </form>
    </div>
</div>

{{> layout-scripts }}

<script>
    function showChangePasswordModal() {
        document.getElementById('changePasswordModal').classList.remove('hidden');
    }

    function closeChangePasswordModal() {
        document.getElementById('changePasswordModal').classList.add('hidden');
        document.getElementById('changePasswordForm').reset();
        document.getElementById('passwordError').classList.add('hidden');
    }

    document.getElementById('changePasswordForm').addEventListener('submit', async (e) => {
        e.preventDefault();
        const currentPassword = document.getElementById('currentPassword').value;
        const newPassword = document.getElementById('newPassword').value;
        const confirmPassword = document.getElementById('confirmPassword').value;
        const errorDiv = document.getElementById('passwordError');

        if (newPassword !== confirmPassword) {
            errorDiv.textContent = 'New passwords do not match';
            errorDiv.classList.remove('hidden');
            return;
        }

        if (newPassword.length < 6) {
            errorDiv.textContent = 'New password must be at least 6 characters long';
            errorDiv.classList.remove('hidden');
            return;
        }

        try {
            const response = await fetch('/api/change-password', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ currentPassword, newPassword })
            });

            const data = await response.json();

            if (!response.ok) {
                errorDiv.textContent = data.error || 'Failed to change password';
                errorDiv.classList.remove('hidden');
                return;
            }

            alert('Password changed successfully');
            closeChangePasswordModal();
        } catch (error) {
            errorDiv.textContent = 'An error occurred';
            errorDiv.classList.remove('hidden');
        }
    });

    const soundSelect = document.getElementById('notificationSoundPref');
    if (soundSelect) {
        const currentSound = soundSelect.dataset.currentSound || 'happy-bell.wav';
        soundSelect.value = currentSound;
    }

    // Notification sound functions
    async function saveNotificationSound() {
        const soundSelect = document.getElementById('notificationSoundPref');
        const notificationSound = soundSelect.value;
        const messageDiv = document.getElementById('soundMessage');

        try {
            const response = await fetch('/api/update-notification-sound', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ notification_sound: notificationSound })
            });

            const data = await response.json();

            if (!response.ok) {
                messageDiv.innerHTML = `<div class="rounded-lg border border-rose-200 bg-rose-50 px-4 py-3 text-sm text-rose-700">${data.error || 'Failed to save notification sound'}</div>`;
                return;
            }

            messageDiv.innerHTML = '<div class="rounded-lg border border-emerald-200 bg-emerald-50 px-4 py-3 text-sm text-emerald-700">Notification sound saved successfully!</div>';
            setTimeout(() => {
                messageDiv.innerHTML = '';
            }, 3000);
        } catch (error) {
            messageDiv.innerHTML = '<div class="rounded-lg border border-rose-200 bg-rose-50 px-4 py-3 text-sm text-rose-700">An error occurred</div>';
        }
    }

    function getNotificationSoundPath(soundFile) {
        if (soundFile === 'pa_sound.mp3') {
            return '/sounds/pa_sound.mp3';
        }

        return `/sounds/${soundFile}`;
    }

    function previewNotificationSound() {
        const soundSelect = document.getElementById('notificationSoundPref');
        const soundFile = soundSelect.value;
        const audio = new Audio(getNotificationSoundPath(soundFile));
        audio.play().catch(error => {
            console.error('Error playing sound:', error);
            alert('Failed to play sound');
        });
    }
</script>
