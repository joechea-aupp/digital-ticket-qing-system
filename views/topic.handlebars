<div class="min-h-screen bg-gradient-to-br from-slate-50 via-sky-50 to-emerald-50 font-['Space_Grotesk'] text-slate-900">
    <div class="relative min-h-screen flex">
        {{> sidebar
            sidebarTitle="Topics"
            sidebarSubtitle="Manage ticket topics"
            showQueue=true
            showDashboard=true
            showTopic=true
            showStations=true
            queueClass="text-slate-600 hover:bg-slate-100 font-medium text-sm transition"
            dashboardClass="text-slate-600 hover:bg-slate-100 font-medium text-sm transition"
            topicClass="bg-emerald-100 text-emerald-700 font-medium text-sm transition"
            stationsClass="text-slate-600 hover:bg-slate-100 font-medium text-sm transition"
        }}

        <div class="w-full md:ml-64 transition-all duration-300">
            {{> header-bar headerTitle="Topics" showProfile=true }}

            <main class="relative mx-auto w-full max-w-6xl px-4 py-10 sm:px-6 lg:px-8">
                <div class="flex flex-col gap-4 sm:flex-row sm:items-center sm:justify-between">
                    <div>
                        <h1 class="text-3xl font-semibold tracking-tight">Topics</h1>
                        <p class="mt-2 text-sm text-slate-500">Create and manage ticket topics. Define prefixes and set defaults.</p>
                    </div>
                    <button class="inline-flex items-center justify-center gap-2 rounded-lg bg-emerald-600 px-4 py-2 text-sm font-semibold text-white shadow-sm transition hover:bg-emerald-700" onclick="showTopicModal()">
                        <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
                        </svg>
                        Add New Topic
                    </button>
                </div>

                <div id="messageContainer" class="mt-6"></div>

                <div class="mt-4 rounded-2xl bg-white/90 shadow-lg ring-1 ring-slate-200/60">
                    <table class="w-full text-sm border-collapse">
                        <thead class="bg-slate-100 text-slate-600">
                            <tr>
                                <th class="px-6 py-3 text-left font-semibold">ID</th>
                                <th class="px-6 py-3 text-left font-semibold">Name</th>
                                <th class="px-6 py-3 text-left font-semibold">Prefix</th>
                                <th class="px-6 py-3 text-left font-semibold">Description</th>
                                <th class="px-6 py-3 text-center font-semibold">Default</th>
                                <th class="px-6 py-3 text-center font-semibold">Copy URL</th>
                                <th class="px-6 py-3 text-center font-semibold">Actions</th>
                            </tr>
                        </thead>
                        <tbody id="topicsTable" class="divide-y divide-slate-100">
                            {{#each topics}}
                            <tr class="hover:bg-slate-50/80" data-topic-id="{{this.id}}">
                                <td class="px-6 py-4 font-medium text-slate-800">{{this.id}}</td>
                                <td class="px-6 py-4 font-medium text-slate-800">{{this.name}}</td>
                                <td class="px-6 py-4">
                                    <code class="rounded-lg bg-slate-100 px-2 py-1 text-xs font-semibold text-slate-700">{{this.prefix_id}}</code>
                                </td>
                                <td class="px-6 py-4 text-slate-600">{{#if this.description}}{{this.description}}{{else}}<span class="text-slate-400">-</span>{{/if}}</td>
                                <td class="px-6 py-4 text-center">
                                    {{#if this.is_default}}
                                        <span class="inline-flex items-center gap-1 rounded-full bg-emerald-100 px-3 py-1 text-xs font-semibold text-emerald-700">
                                            <svg class="h-3 w-3" fill="currentColor" viewBox="0 0 20 20">
                                                <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
                                            </svg>
                                            Default
                                        </span>
                                    {{else}}
                                        <span class="text-slate-400">-</span>
                                    {{/if}}
                                </td>
                                <td class="px-6 py-4 text-center">
                                    <button class="inline-flex items-center justify-center gap-2 rounded-lg bg-sky-100 px-3 py-1.5 text-xs font-semibold text-sky-700 shadow-sm transition hover:bg-sky-200" onclick="copyTopicUrl('{{this.prefix_id}}', '{{this.name}}')" title="Copy shareable URL">
                                        <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"></path>
                                        </svg>
                                        Copy
                                    </button>
                                </td>
                                <td class="px-6 py-4">
                                    <div class="relative inline-block text-left">
                                        <button class="inline-flex items-center justify-center rounded-lg bg-slate-900 px-3 py-1.5 text-xs font-semibold text-white shadow-sm transition hover:bg-slate-800" onclick="toggleTopicDropdown({{this.id}})" title="Actions">
                                            <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                                            </svg>
                                        </button>
                                        <div class="topicDropdown hidden absolute bottom-full mb-2 right-0 w-48 rounded-lg bg-white shadow-xl ring-1 ring-slate-200 z-50" data-topic-id="{{this.id}}">
                                            <button class="w-full px-4 py-2.5 text-left text-sm font-medium text-slate-700 hover:bg-slate-100 first:rounded-t-lg flex items-center gap-2 transition" onclick="editTopic({{this.id}})">
                                                <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                                                </svg>
                                                Edit
                                            </button>
                                            {{#unless this.is_default}}
                                                <button class="w-full px-4 py-2.5 text-left text-sm font-medium text-slate-700 hover:bg-slate-100 flex items-center gap-2 transition" onclick="setDefaultTopic({{this.id}})">
                                                    <svg class="h-4 w-4" fill="currentColor" viewBox="0 0 20 20">
                                                        <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
                                                    </svg>
                                                    Set as Default
                                                </button>
                                                <button class="w-full px-4 py-2.5 text-left text-sm font-medium text-rose-600 hover:bg-rose-50 last:rounded-b-lg flex items-center gap-2 transition" onclick="deleteTopic({{this.id}}, '{{this.name}}')">
                                                    <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                                                    </svg>
                                                    Delete
                                                </button>
                                            {{/unless}}
                                        </div>
                                    </div>
                                </td>
                            </tr>
                            {{else}}
                            <tr>
                                <td colspan="6" class="px-6 py-8 text-center text-slate-500">
                                    No topics available. Create one to get started.
                                </td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
            </main>
        </div>
    </div>
</div>

<!-- Topic Modal -->
<div id="topicModal" class="hidden fixed inset-0 z-50 flex items-center justify-center bg-slate-900/50 backdrop-blur-sm">
    <div class="w-full max-w-md rounded-2xl bg-white shadow-2xl ring-1 ring-slate-200/60">
        <!-- Modal Header -->
        <div class="border-b border-slate-200 px-8 py-6">
            <h2 id="modalTitle" class="text-2xl font-bold tracking-tight text-slate-900">Add New Topic</h2>
            <p class="mt-1 text-sm text-slate-500">Create a new topic for organizing tickets</p>
        </div>

        <!-- Modal Content -->
        <div class="px-8 py-6">
            <div id="modalError" class="mb-4 hidden rounded-lg border border-rose-200 bg-rose-50 px-4 py-3 text-sm text-rose-700"></div>
            
            <form id="topicForm" class="space-y-5">
                <input type="hidden" id="topicId" value="">
                
                <!-- Topic Name Field -->
                <div>
                    <label for="topicName" class="block text-sm font-semibold text-slate-700 mb-2">
                        Topic Name
                        <span class="text-rose-500">*</span>
                    </label>
                    <input 
                        type="text" 
                        id="topicName" 
                        placeholder="e.g., General Inquiry" 
                        required 
                        class="w-full px-4 py-2.5 rounded-lg border border-slate-300 bg-slate-50 text-slate-900 placeholder-slate-400 transition focus:border-emerald-500 focus:bg-white focus:outline-none focus:ring-2 focus:ring-emerald-500/20"
                    >
                    <p class="mt-1.5 text-xs text-slate-500">Unique name for this topic</p>
                </div>

                <!-- Prefix ID Field -->
                <div>
                    <label for="topicPrefixId" class="block text-sm font-semibold text-slate-700 mb-2">
                        Prefix ID
                        <span class="text-rose-500">*</span>
                    </label>
                    <input 
                        type="text" 
                        id="topicPrefixId" 
                        placeholder="e.g., GEN" 
                        required 
                        class="w-full px-4 py-2.5 rounded-lg border border-slate-300 bg-slate-50 text-slate-900 placeholder-slate-400 uppercase transition focus:border-emerald-500 focus:bg-white focus:outline-none focus:ring-2 focus:ring-emerald-500/20"
                    >
                    <p class="mt-1.5 text-xs text-slate-500">Prefix for ticket numbers (e.g., GEN-001, GEN-002)</p>
                </div>

                <!-- Description Field -->
                <div>
                    <label for="topicDescription" class="block text-sm font-semibold text-slate-700 mb-2">
                        Description
                    </label>
                    <textarea 
                        id="topicDescription" 
                        rows="3" 
                        placeholder="Describe the purpose of this topic" 
                        class="w-full px-4 py-2.5 rounded-lg border border-slate-300 bg-slate-50 text-slate-900 placeholder-slate-400 resize-none transition focus:border-emerald-500 focus:bg-white focus:outline-none focus:ring-2 focus:ring-emerald-500/20"
                    ></textarea>
                </div>

                <!-- Default Topic Checkbox -->
                <div class="rounded-lg border border-slate-200 bg-slate-50/50 p-4">
                    <label class="flex items-center gap-3 cursor-pointer">
                        <input 
                            type="checkbox" 
                            id="topicIsDefault" 
                            class="h-4 w-4 rounded border-slate-300 text-emerald-600 transition focus:ring-2 focus:ring-emerald-500"
                        >
                        <div>
                            <span class="block text-sm font-semibold text-slate-700">Set as Default Topic</span>
                            <span class="block text-xs text-slate-500 mt-0.5">Tickets will be assigned to this topic by default</span>
                        </div>
                    </label>
                </div>
            </form>
        </div>

        <!-- Modal Footer -->
        <div class="border-t border-slate-200 px-8 py-4 flex gap-3 bg-slate-50/50">
            <button 
                type="button" 
                onclick="closeTopicModal()" 
                class="flex-1 rounded-lg border border-slate-300 bg-white px-4 py-2.5 text-sm font-semibold text-slate-700 transition hover:bg-slate-50 focus:outline-none focus:ring-2 focus:ring-slate-500/20"
            >
                Cancel
            </button>
            <button 
                type="button" 
                id="submitBtn" 
                class="flex-1 rounded-lg bg-emerald-600 px-4 py-2.5 text-sm font-semibold text-white shadow-sm transition hover:bg-emerald-700 focus:outline-none focus:ring-2 focus:ring-emerald-500/50"
            >
                Save Topic
            </button>
        </div>
    </div>
</div>

<script>
    let editingTopicId = null;

    function showTopicModal() {
        editingTopicId = null;
        document.getElementById('modalTitle').textContent = 'Add New Topic';
        document.getElementById('topicForm').reset();
        document.getElementById('modalError').classList.add('hidden');
        document.getElementById('topicModal').classList.remove('hidden');
    }

    function closeTopicModal() {
        document.getElementById('topicModal').classList.add('hidden');
    }

    function showError(message) {
        const errorDiv = document.getElementById('modalError');
        errorDiv.textContent = message;
        errorDiv.classList.remove('hidden');
    }

    function editTopic(topicId) {
        fetch(`/api/topics/${topicId}`)
            .then(res => res.json())
            .then(topic => {
                editingTopicId = topicId;
                document.getElementById('topicId').value = topic.id;
                document.getElementById('topicName').value = topic.name;
                document.getElementById('topicPrefixId').value = topic.prefix_id;
                document.getElementById('topicDescription').value = topic.description || '';
                document.getElementById('topicIsDefault').checked = topic.is_default;
                document.getElementById('modalTitle').textContent = 'Edit Topic';
                document.getElementById('modalError').classList.add('hidden');
                document.getElementById('topicModal').classList.remove('hidden');
            })
            .catch(err => {
                console.error('Error:', err);
                alert('Failed to load topic details');
            });
    }

    document.getElementById('submitBtn').addEventListener('click', async (e) => {
        e.preventDefault();
        
        const topicId = document.getElementById('topicId').value;
        const name = document.getElementById('topicName').value.trim();
        const prefix_id = document.getElementById('topicPrefixId').value.trim().toUpperCase();
        const description = document.getElementById('topicDescription').value.trim();
        const is_default = document.getElementById('topicIsDefault').checked;

        if (!name || !prefix_id) {
            showError('Name and Prefix ID are required');
            return;
        }

        try {
            const url = topicId ? `/api/topics/${topicId}` : '/api/topics';
            const method = topicId ? 'PUT' : 'POST';

            const response = await fetch(url, {
                method: method,
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({ name, prefix_id, description, is_default })
            });

            if (!response.ok) {
                const data = await response.json();
                throw new Error(data.error || `Failed to ${topicId ? 'update' : 'create'} topic`);
            }

            location.reload();
        } catch (error) {
            console.error('Error:', error);
            showError(error.message);
        }
    });

    async function setDefaultTopic(topicId) {
        if (!confirm('Set this topic as the default?')) return;

        try {
            const response = await fetch(`/api/topics/${topicId}/set-default`, {
                method: 'PUT',
                headers: {
                    'Content-Type': 'application/json',
                }
            });

            if (!response.ok) {
                const data = await response.json();
                throw new Error(data.error || 'Failed to set default topic');
            }

            location.reload();
        } catch (error) {
            console.error('Error:', error);
            alert('Failed to set default topic: ' + error.message);
        }
    }

    async function deleteTopic(topicId, topicName) {
        if (!confirm(`Are you sure you want to delete "${topicName}"? This cannot be undone.`)) return;

        try {
            const response = await fetch(`/api/topics/${topicId}`, {
                method: 'DELETE',
                headers: {
                    'Content-Type': 'application/json',
                }
            });

            if (!response.ok) {
                const data = await response.json();
                throw new Error(data.error || 'Failed to delete topic');
            }

            location.reload();
        } catch (error) {
            console.error('Error:', error);
            alert('Failed to delete topic: ' + error.message);
        }
    }

    function toggleTopicDropdown(topicId) {
        const dropdown = document.querySelector(`.topicDropdown[data-topic-id="${topicId}"]`);
        const allDropdowns = document.querySelectorAll('.topicDropdown');
        
        // Close all other dropdowns
        allDropdowns.forEach(d => {
            if (d !== dropdown) {
                d.classList.add('hidden');
            }
        });
        
        // Toggle the current dropdown
        dropdown.classList.toggle('hidden');
    }

    async function copyTopicUrl(topicPrefix, topicName) {
        const baseUrl = '{{baseUrl}}';
        const ticketUrl = `${baseUrl}/get-ticket/${topicPrefix}`;
        
        try {
            await navigator.clipboard.writeText(ticketUrl);
            
            // Show success message
            const messageContainer = document.getElementById('messageContainer');
            const message = document.createElement('div');
            message.className = 'rounded-lg border border-emerald-200 bg-emerald-50 px-4 py-3 text-sm text-emerald-700';
            message.innerHTML = `
                <div class="flex items-center gap-2">
                    <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                    </svg>
                    <span>âœ“ URL for "${topicName}" copied to clipboard!</span>
                </div>
            `;
            messageContainer.innerHTML = '';
            messageContainer.appendChild(message);
            
            // Auto-remove message after 3 seconds
            setTimeout(() => {
                message.remove();
            }, 3000);
        } catch (error) {
            console.error('Failed to copy URL:', error);
            alert('Failed to copy URL to clipboard');
        }
    }

    // Close dropdowns when clicking outside
    document.addEventListener('click', (e) => {
        if (!e.target.closest('.topicDropdown') && !e.target.closest('button[onclick*="toggleTopicDropdown"]')) {
            document.querySelectorAll('.topicDropdown').forEach(d => {
                d.classList.add('hidden');
            });
        }
    });

    // Close modal when clicking outside
    document.getElementById('topicModal').addEventListener('click', (e) => {
        if (e.target === document.getElementById('topicModal')) {
            closeTopicModal();
        }
    });
</script>

